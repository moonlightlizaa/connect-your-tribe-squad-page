<%- include('./partials/head') %>

<main>
  <section class="sidebar">
    <img src="/assets/icons/FDND-Tribe.svg" />
    <a href="/?squad=squad-a-2022">Squad A</a>
    <a href="/?squad=squad-b-2022">Squad B</a>
    <a href="/?squad=squat-c-2022">Squad C</a>
  </section>
  <section class="topbar"></section>
  <section class="content">
    <h1>FDND <%= squad.name %></h1>

    <hr />

    <span> Sorteren op: </span>
    <span>
      <a href="/?squad=<%= squad.slug %>&orderBy=name" class="sort-link">
        Naam
      </a>
    </span>

    <hr />
    <section class="member">
      <!-- Hier komen de members -->
      <% squad.members.forEach(member => { %>
      <article class="member-info">
        <% if (member.avatar) { %>
        <img
          src="<%= member.avatar %>"
          alt="De avatar van <%= member.name %>"
        />
        <% }else{ %>
        <img src="/assets/placeholder.jpg" alt="Placeholder avatar" />
        <% } %>

        <h2><%= member.name %> <%= member.prefix %> <%= member.surname %></h2>
      </article>
      <% }) %>
    </section>
  </section>
</main>

<%- include('./partials/foot') %>
